[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/home/python/Romissia
Environment="PATH=/home/python/Romissia/venv/bin"
ExecStart=/home/python/Romissia/venv/bin/gunicorn \
          --access-logfile - \
          --workers 5 \
          --timeout 600 \
          --bind unix:/run/gunicorn.sock \
          config.wsgi:application

[Install]
WantedBy=multi-user.target